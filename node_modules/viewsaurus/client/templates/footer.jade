footer
    .footer-content
        .footer-content-row.layout-2-cols
            .footer-content-row-left
                .footer-logo
                    a(href='http://www.ringcentral.com')
                        span Back to the main site
            .footer-content-row-right
                ul.footer-text-links
                    li
                        a(href='http://www.ringcentral.com/legal.html', target='_blank')
                            span Legal
                    li
                        a(href='http://www.ringcentral.com/security-statement.html', target='_blank')
                            span Security Policy
                    li
                        a(href='http://www.ringcentral.com/legal/privacy-policy.html', target='_blank')
                            span Privacy Policy
                    li
                        a(ng-href='https://devcommunity.ringcentral.com', target='_blank', href='https://devcommunity.ringcentral.com')
                            span Community
                    li
                        a(href='https://medium.com/ringcentral-developers', target='_blank')
                            span Blog
        .footer-content-row.footer-content-row-last.layout-2-cols
            .footer-content-row-left
                span.footer-copyright
                    | Â© 1999-
                    span.footer-copyright-to.ng-binding(ng-bind="::main.nowObj|date:'yyyy'") 2017
                    |  RingCentral, Inc. All rights reserved.
            .footer-content-row-right
                .footer-image-links
                    .footer-image-link.footer-image-link-facebook
                        a(target='_blank', href='http://www.facebook.com/ringcentral')
                            i.fa.icon-facebook
                    .footer-image-link.footer-image-link-twitter
                        a(target='_blank', href='http://twitter.com/ringcentraldevs')
                            i.fa.icon-twitter
                    .footer-image-link.footer-image-link-google-plus
                        a(target='_blank', href='https://www.google.com/+ringcentral')
                            i.fa.icon-google_plus
                    .footer-image-link.footer-image-link-linkedin
                        a(target='_blank', href='http://www.linkedin.com/company/ringcentral')
                            i.fa.icon-linkedin
                    .footer-image-link.footer-image-link-youtube
                        a(target='_blank', href='http://www.youtube.com/ringcentral')
                            i.fa.icon-youtube
